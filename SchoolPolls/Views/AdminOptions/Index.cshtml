@model IEnumerable<SchoolPolls.Models.Option>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Опции за анкета: @ViewBag.PollTitle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" action="@Url.Action("Create")">
    <input type="hidden" name="pollId" value="@ViewBag.PollId" />

    <div class="form-group">
        <input type="text" name="text"
               class="form-control"
               placeholder="Текст на отговора"
               required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">
        <i class="fa fa-plus"></i> Добави опция
    </button>
</form>

<hr />

<table class="table">
    <tr>
        <th>Опция</th>
        <th></th>
    </tr>

    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Text</td>
            <td>
                <a href="@Url.Action("Delete", new { id = o.OptionId })"
                   class="btn btn-sm btn-danger">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>
